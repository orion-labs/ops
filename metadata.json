{
  "name": "ops",
  "version": "3.2.0",
  "package": "github.com/orion-labs/orion-ptt-system-ops",
  "description": "Easily manage Orion PTT System stacks via CloudFormation.",
  "repository": "https://orionlabs-dbt-tools.s3.us-east-1.amazonaws.com",
  "building": {
    "targets": [
      {
        "name": "darwin/amd64",
        "ldflags": "-X github.com/orion-labs/orion-ptt-system-ops/pkg/ops.orionAccount=${AWS_ACCOUNT}"
      },
      {
        "name": "linux/amd64",
        "ldflags": "-X github.com/orion-labs/orion-ptt-system-ops/pkg/ops.orionAccount=${AWS_ACCOUNT}"
      }
    ],
    "extras": [
      {
        "template": "templates/description.tmpl",
        "filename": "description.txt",
        "executable": false
      }
    ]
  },
  "signing": {
    "program": "gpg",
    "email": "obci@orionlabs.io"

  },
  "publishing": {
    "targets": [
      {
        "src": "description.txt",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/description.txt",
        "sig": true,
        "checksums": true
      },
      {
        "src": "ops_darwin_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/darwin/amd64/{{.Name}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "ops_linux_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/linux/amd64/{{.Name}}",
        "sig": true,
        "checksums": true
      }
    ]
  }
}